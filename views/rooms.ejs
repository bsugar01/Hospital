<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Room Availability</title>
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="main-wrapper">
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <a href="/home" class="logo" style="font-size: 20px; font-weight: bold; color:white;">
          CityCare
        </a>
      </div>
      <a id="toggle_btn" href="#"><i class="fa fa-bars"></i></a>
      <ul class="nav user-menu float-right">
        <li class="nav-item dropdown has-arrow">
          <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
            <span class="user-img"><img class="rounded-circle" src="/assets/img/user.jpg" width="24" alt="Admin"></span>
            <span>Admin</span>
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/home/profile">My Profile</a>
            <a class="dropdown-item" href="/logout">Logout</a>
          </div>
        </li>
      </ul>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
          <ul>
            <li class="menu-title">Main</li>
            <li><a href="/home"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
            <li><a href="/patients"><i class="fa fa-user-md"></i> <span>Patients</span></a></li>
            <li><a href="/appointment"><i class="fa fa-calendar"></i> <span>Appointments</span></a></li>
            <li class="active"><a href="/rooms"><i class="fa fa-bed"></i> <span>Rooms</span></a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Page Wrapper -->
    <div class="page-wrapper">
      <div class="content">
        <div class="row">
          <div class="col-sm-8">
            <h4 class="page-title">Room Availability</h4>
          </div>
          <div class="col-sm-4 text-end">
            <a href="/rooms/add" class="btn btn-success"><i class="fa fa-plus"></i> Add Room</a>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Room Number</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% rooms.forEach(function(room) { %>
                    <tr>
                      <td><%= room.id %></td>
                      <td><%= room.room_number %></td>
                      <td>
                        <% if (room.status === 'vacant') { %>
                          <span class="badge bg-success">Vacant</span>
                        <% } else if (room.status === 'occupied') { %>
                          <span class="badge bg-secondary">Occupied</span>
                        <% } else if (room.status === 'isolation') { %>
                          <span class="badge bg-danger">Isolation</span>
                        <% } else { %>
                          <span class="badge bg-warning text-dark">Unknown</span>
                        <% } %>
                      </td>
                      <td>
                        <a href="/rooms/edit/<%= room.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/rooms/delete/<%= room.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this room?')">Delete</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="sidebar-overlay"></div>
  <script src="/assets/js/jquery-3.2.1.min.js"></script>
  <script src="/assets/js/bootstrap.min.js"></script>
</body>
</html>
