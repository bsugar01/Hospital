<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Patients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .table th {
            background-color: #e9ecef;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .action-icons {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                 <a href="/home" class="logo" style="font-size: 20px; font-weight: bold; color:white;">
                 CityCare
                 </a>
                  </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="/assets/img/user.jpg" width="24" alt="Admin">
                            <span class="status online"></span>
                        </span>
                        <span>Admin</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/home/profile">My Profile</a>
                        <a class="dropdown-item" href="/home/edit-profile">Edit Profile</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>

        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">Main</li>
                        <li><a href="/home"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
                     
                        <li class="active"><a href="/patients"><i class="fa fa-wheelchair"></i> <span>Patients</span></a></li>
                        <li><a href="/appointment"><i class="fa fa-calendar"></i> <span>Appointments</span></a></li>
                        <li><a href="/rooms"><i class="fa-solid fa-bed"></i> <span>Rooms</span></a></li>
                        
                    </ul>
                </div>
            </div>
        </div>

        <div class="page-wrapper">
            <div class="content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="page-title">Patients List</h4>
                    <a href="/patients/add" class="btn btn-primary">+ Add Patient</a>
                </div>

                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Age</th>
                                <th>Phone</th>
                                <th>Room No.</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach(function(patient) { %>
                                <tr>
                                    <td><%= patient.id %></td>
                                    <td><%= patient.name %></td>
                                    <td><%= patient.email %></td>
                                    <td><%= patient.gender %></td>
                                    <td><%= patient.age %></td>
                                    <td><%= patient.phone %></td>
                                    <td><%= patient.roomnumber || 'N/A' %></td>
                                  

                                    <td>
                                      <% if (parseInt(patient.isisolated) === 1) { %>
                                       <span class="badge bg-danger">Isolated</span>
                                         <% } else { %>
                                          <span class="badge bg-success">Normal</span>
                                              <% } %>

                                    </td>
                                    <td class="action-icons">
                                        <a href="/patients/edit/<%= patient.id %>" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/patients/delete/<%= patient.id %>" class="btn btn-sm btn-danger" on click= "return confirm('Are you sure you want to delete this patient?');">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/app.js"></script>
</body>
</html>
