<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
  <title>CityCare Admin Dashboard</title>
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="main-wrapper">
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <a href="/home" class="logo" style="font-size: 22px; font-weight: bold; color: white;">CityCare</a>
      </div>
      <a id="toggle_btn" href="#"><i class="fa fa-bars"></i></a>
      <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
      <ul class="nav user-menu float-right">
        <li class="nav-item dropdown has-arrow">
          <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
            <span class="user-img">
              <img class="rounded-circle" src="/assets/img/user.jpg" width="24" alt="Admin">
              <span class="status online"></span>
            </span>
            <span>Admin</span>
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/home/profile">My Profile</a>
            <a class="dropdown-item" href="/logout">Logout</a>
          </div>
        </li>
      </ul>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
          <ul>
            <li class="menu-title">Main</li>
            <li class="active"><a href="/home"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
            <li><a href="/patients"><i class="fa fa-user"></i> <span>Patients</span></a></li>
            <li><a href="/appointment"><i class="fa fa-calendar"></i> <span>Appointments</span></a></li>
            <li><a href="/rooms"><i class="fa fa-bed"></i> <span>Rooms</span></a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Page Wrapper -->
    <div class="page-wrapper">
      <div class="content">
        <div class="row text-center">
          <div class="col-sm-12">
            <h3 class="page-title">Welcome to CityCare Admin Dashboard</h3>
            <p class="text-muted">Use the sidebar to manage Patients, Appointments, and Rooms.</p>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-md-4">
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5 class="card-title">Patients</h5>
                <p class="card-text">Manage all patient records.</p>
                <a href="/patients" class="btn btn-light">View Patients</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-white bg-success">
              <div class="card-body">
                <h5 class="card-title">Appointments</h5>
                <p class="card-text">Track and manage bookings.</p>
                <a href="/appointment" class="btn btn-light">View Appointments</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-white bg-info">
              <div class="card-body">
                <h5 class="card-title">Room Availability</h5>
                <p class="card-text">View and update room status.</p>
                <a href="/rooms" class="btn btn-light">Manage Rooms</a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="sidebar-overlay" data-reff=""></div>
  <script src="/assets/js/jquery-3.2.1.min.js"></script>
  <script src="/assets/js/popper.min.js"></script>
  <script src="/assets/js/bootstrap.min.js"></script>
  <script src="/assets/js/jquery.slimscroll.js"></script>
  <script src="/assets/js/app.js"></script>
</body>
</html>
